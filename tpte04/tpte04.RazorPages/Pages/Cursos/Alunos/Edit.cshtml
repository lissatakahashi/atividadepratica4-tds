@page "{id:int}"
@model tpte04.RazorPages.Pages.Alunos.Edit

<h1>Editar Aluno</h1>

<hr>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="AlunoModel.IdAluno">
            <div class="form-group">
                <label asp-for="AlunoModel.NomeAluno"></label>
                <input asp-for="AlunoModel.NomeAluno" class="form-control" required>
                <span asp-validation-for="AlunoModel.NomeAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoModel.Email"></label>
                <input type="email" asp-for="AlunoModel.Email" class="form-control" required>
                <span asp-validation-for="AlunoModel.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar">
                <a asp-page="/Cursos/Alunos/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>